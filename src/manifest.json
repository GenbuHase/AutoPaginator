{
  "manifest_version": 3,

  "default_locale": "ja",

  "name": "__MSG_appName__",
  "version": "1.1.0",
  "description": "__MSG_appDesc__",

  "action": {
    "default_popup": "src/popup/index.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"]
    }
  ],

  "permissions": ["tabs", "storage"]
}
